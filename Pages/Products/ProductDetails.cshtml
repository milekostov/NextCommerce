@page "{id:int}"
@model NextCommerce.Pages.Products.ProductDetailsModel
@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-4">
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (Model.Product != null)
    {
        <div class="card">
            <div class="row g-0">
                <div class="col-md-6">
                    @if (!string.IsNullOrEmpty(Model.Product.Image))
                    {
                        <img src="@Model.Product.Image" class="img-fluid rounded-start" alt="@Model.Product.Name" style="max-height: 500px; width: 100%; object-fit: contain;">
                    }
                    else
                    {
                        <div class="text-center p-5 bg-light">
                            <span class="text-muted">No image available</span>
                        </div>
                    }
                </div>
                <div class="col-md-6">
                    <div class="card-body">
                        <h2 class="card-title">@Model.Product.Name</h2>
                        <p class="card-text">
                            <small class="text-muted">Category: @Model.Product.CategoryName</small>
                        </p>
                        <p class="card-text">@Model.Product.Description</p>
                        <h4 class="text-primary mb-3">@Model.Product.Price.ToString("C")</h4>
                        
                        @if (Model.Product.Quantity > 0)
                        {
                            <p class="text-success">In Stock: @Model.Product.Quantity units</p>
                            @if (HttpContext.Session.GetInt32("LoggedUser") != null)
                            {
                                <form method="post" asp-page-handler="AddToCart" class="mb-3">
                                    <input type="hidden" name="productId" value="@Model.Product.Id" />
                                    <div class="input-group mb-3" style="max-width: 200px;">
                                        <input type="number" name="quantity" class="form-control" 
                                               value="1" min="1" max="@Model.Product.Quantity" />
                                        <button type="submit" class="btn btn-primary">Add to Cart</button>
                                    </div>
                                </form>
                            }
                            else
                            {
                                <a href="/Login" class="btn btn-primary">Login to Purchase</a>
                            }
                        }
                        else
                        {
                            <p class="text-danger">Out of Stock</p>
                        }

                        @if (ViewData["IsAdmin"] != null && (bool)ViewData["IsAdmin"])
                        {
                            <div class="mt-3">
                                <a href="/Products/EditProduct/@Model.Product.Id" class="btn btn-warning">Edit Product</a>
                                <form method="post" asp-page-handler="Delete" style="display: inline;">
                                    <input type="hidden" name="productId" value="@Model.Product.Id" />
                                    <button type="submit" class="btn btn-danger" 
                                            onclick="return confirm('Are you sure you want to delete this product?')">
                                        Delete Product
                                    </button>
                                </form>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            Product not found.
        </div>
    }

    <div class="mt-3">
        <a href="/Products/Products" class="btn btn-secondary">Back to Products</a>
    </div>
</div> 