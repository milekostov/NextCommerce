@page "{id:int}"
@model NextCommerce.Pages.Products.ProductDetailsModel
@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-4">
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (Model.Product != null)
    {
        <div class="card mb-4">
            <div class="row g-0">
                <div class="col-md-6">
                    @if (!string.IsNullOrEmpty(Model.Product.Image))
                    {
                        <img src="@Model.Product.Image" class="img-fluid rounded-start" alt="@Model.Product.Name" style="max-height: 500px; width: 100%; object-fit: contain;">
                    }
                    else
                    {
                        <div class="text-center p-5 bg-light">
                            <span class="text-muted">No image available</span>
                        </div>
                    }
                </div>
                <div class="col-md-6">
                    <div class="card-body">
                        <h2 class="card-title">@Model.Product.Name</h2>
                        <div class="mb-2">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= Math.Round(Model.Product.AverageRating))
                                {
                                    <i class="fas fa-star text-warning"></i>
                                }
                                else
                                {
                                    <i class="far fa-star text-warning"></i>
                                }
                            }
                            <span class="ms-2">(@Model.Product.ReviewCount reviews)</span>
                        </div>
                        <p class="card-text">
                            <small class="text-muted">Category: @Model.Product.CategoryName</small>
                        </p>
                        <p class="card-text">@Model.Product.Description</p>
                        <h4 class="text-primary mb-3">@Model.Product.Price.ToString("C")</h4>
                        
                        @if (Model.Product.Quantity > 0)
                        {
                            <p class="text-success">In Stock: @Model.Product.Quantity units</p>
                            @if (HttpContext.Session.GetInt32("LoggedUser") != null)
                            {
                                <form method="post" asp-page-handler="AddToCart" class="mb-3">
                                    <input type="hidden" name="productId" value="@Model.Product.Id" />
                                    <div class="input-group mb-3" style="max-width: 200px;">
                                        <input type="number" name="quantity" class="form-control" 
                                               value="1" min="1" max="@Model.Product.Quantity" />
                                        <button type="submit" class="btn btn-primary">Add to Cart</button>
                                    </div>
                                </form>
                            }
                            else
                            {
                                <a href="/Login" class="btn btn-primary">Login to Purchase</a>
                            }
                        }
                        else
                        {
                            <p class="text-danger">Out of Stock</p>
                        }

                        @if (ViewData["IsAdmin"] != null && (bool)ViewData["IsAdmin"])
                        {
                            <div class="mt-3">
                                <a href="/Products/EditProduct/@Model.Product.Id" class="btn btn-warning">Edit Product</a>
                                <form method="post" asp-page-handler="Delete" style="display: inline;">
                                    <input type="hidden" name="productId" value="@Model.Product.Id" />
                                    <button type="submit" class="btn btn-danger" 
                                            onclick="return confirm('Are you sure you want to delete this product?')">
                                        Delete Product
                                    </button>
                                </form>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Reviews Section -->
        <div class="card">
            <div class="card-header">
                <h3>Customer Reviews</h3>
            </div>
            <div class="card-body">
                @if (HttpContext.Session.GetInt32("LoggedUser") != null)
                {
                    if (!Model.HasUserReviewed)
                    {
                        <form method="post" asp-page-handler="AddReview" class="mb-4">
                            <input type="hidden" name="productId" value="@Model.Product.Id" />
                            <div class="mb-3">
                                <label class="form-label">Your Rating</label>
                                <div class="star-rating">
                                    @for (int i = 5; i >= 1; i--)
                                    {
                                        <input type="radio" name="rating" value="@i" id="star@i" required />
                                        <label for="star@i"><i class="far fa-star"></i></label>
                                    }
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Your Review</label>
                                <textarea name="comment" class="form-control" rows="3" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Submit Review</button>
                        </form>
                    }
                }
                else
                {
                    <div class="alert alert-info">
                        Please <a href="/Login">login</a> to leave a review.
                    </div>
                }

                <div class="reviews-list">
                    @foreach (var review in Model.Reviews)
                    {
                        <div class="review-item border-bottom pb-3 mb-3">
                            <div class="d-flex justify-content-between">
                                <div>
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= review.Rating)
                                        {
                                            <i class="fas fa-star text-warning"></i>
                                        }
                                        else
                                        {
                                            <i class="far fa-star text-warning"></i>
                                        }
                                    }
                                    <span class="ms-2 text-muted">by @review.UserName</span>
                                </div>
                                <small class="text-muted">@review.DateCreated.ToString("MMM dd, yyyy")</small>
                            </div>
                            <p class="mt-2 mb-0">@review.Comment</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            Product not found.
        </div>
    }

    <div class="mt-3">
        <a href="/Products/Products" class="btn btn-secondary">Back to Products</a>
    </div>
</div>

@section Styles {
    <style>
        .star-rating {
            display: flex;
            flex-direction: row-reverse;
            justify-content: flex-end;
        }

        .star-rating input {
            display: none;
        }

        .star-rating label {
            cursor: pointer;
            font-size: 1.5rem;
            padding: 0 0.2rem;
            color: #ffc107;
        }

        .star-rating input:checked ~ label i.far.fa-star::before {
            content: "\f005";
            font-weight: 900;
        }

        .star-rating label:hover i.far.fa-star::before,
        .star-rating label:hover ~ label i.far.fa-star::before {
            content: "\f005";
            font-weight: 900;
        }
    </style>
}

@section Scripts {
    <script src="https://kit.fontawesome.com/your-font-awesome-kit.js"></script>
} 