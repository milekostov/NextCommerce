@page "{id:int}"
@model NextCommerce.Pages.Products.EditProductModel
@{
    ViewData["Title"] = "Edit Product";
}

<div class="container">
    <h2 class="text-center my-4">Edit Product</h2>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @Model.ErrorMessage
        </div>
    }

    <form method="post" class="needs-validation" novalidate>
        <input type="hidden" asp-for="Product.Id" />
        <input type="hidden" asp-for="Product.Image" />

        <div class="form-group mb-3">
            <label asp-for="Product.Name" class="form-label">Product Name</label>
            <input asp-for="Product.Name" class="form-control" required />
            <span asp-validation-for="Product.Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Product.Description" class="form-label">Description</label>
            <textarea asp-for="Product.Description" class="form-control" rows="3" required></textarea>
            <span asp-validation-for="Product.Description" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Product.Price" class="form-label">Price</label>
            <input asp-for="Product.Price" class="form-control" type="number" step="0.01" required />
            <span asp-validation-for="Product.Price" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Product.CategoryId" class="form-label">Category</label>
            <select asp-for="Product.CategoryId" class="form-control" required>
                @foreach (var category in Model.Categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
        </div>

        @if (!string.IsNullOrEmpty(Model.Product.Image))
        {
            <div class="mb-3">
                <label class="form-label">Current Image</label>
                <div>
                    <img src="@Model.Product.Image" alt="Product Image" style="max-width: 200px; height: auto;" />
                </div>
            </div>
        }

        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a href="/Products/Products" class="btn btn-secondary">Back to Products</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 