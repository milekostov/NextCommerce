@page
@model NextCommerce.Pages.Products.AddProductModel

@{
    ViewData["Title"] = "Add New Product";
}

<h2 class="text-center my-4">Add New Product</h2>

<div class="container">
    <form method="post" class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="NewProduct.Name" class="font-weight-bold"></label>
            <input asp-for="NewProduct.Name" class="form-control" placeholder="Enter product name" required />
            <span asp-validation-for="NewProduct.Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NewProduct.Description" class="font-weight-bold"></label>
            <textarea asp-for="NewProduct.Description" class="form-control" placeholder="Enter product description" rows="3"></textarea>
            <span asp-validation-for="NewProduct.Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NewProduct.Price" class="font-weight-bold"></label>
            <input asp-for="NewProduct.Price" class="form-control" type="number" step="0.01" placeholder="Enter product price" required />
            <span asp-validation-for="NewProduct.Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NewProduct.CategoryId" class="font-weight-bold"></label>
            <select asp-for="NewProduct.CategoryId" class="form-control" required>
                <option value="">-- Select Category --</option>
                @foreach (var category in Model.Categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
            <span asp-validation-for="NewProduct.CategoryId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NewProduct.Quantity" class="font-weight-bold">Quantity</label>
            <input asp-for="NewProduct.Quantity" class="form-control" type="number" min="0" required />
            <span asp-validation-for="NewProduct.Quantity" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="ImageUpload" class="font-weight-bold">Upload Image</label>
            <input type="file" id="ImageUpload" name="ImageUpload" accept="image/*" class="form-control" required />
            <span asp-validation-for="ImageUpload" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary btn-block">Add Product</button>
        <a href="/Products/Products" class="btn btn-secondary btn-block">Back to Products</a>
        <a href="/Products/AddCategory" class="btn btn-success btn-block">Add New Category</a>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
