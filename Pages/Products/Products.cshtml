@page
@model NextCommerce.Pages.Products.ProductsModel
@{
    ViewData["Title"] = "Products";
}

<div class="container">
    <h2 class="text-center my-4">Products</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (ViewData["IsAdmin"] != null && (bool)ViewData["IsAdmin"])
    {
        <div class="mb-3 d-flex gap-2">
            <a href="/Products/AddProduct" class="btn btn-primary">Add New Product</a>
            <a href="/Products/AddCategory" class="btn btn-success">Add New Category</a>
        </div>
    }

    <div class="mb-3">
        <input type="text" id="searchInput" class="form-control" placeholder="Search products..." onkeyup="searchProducts()">
    </div>

    <table class="table" id="productTable">
        <thead>
            <tr>
                <th>Image</th>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Date Created</th>
                <th>Category</th>
                <th>Quantity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="productTableBody">
            @foreach (var product in Model.ProductList)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(product.Image))
                        {
                            <img src="@product.Image" alt="@product.Name" style="max-width: 100px; height: auto;" />
                        }
                    </td>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>@product.DateCreated.ToString("g")</td>
                    <td>@product.CategoryName</td>
                    <td>@product.Quantity</td>
                    <td>
                        <div class="d-flex gap-2">
                            <a href="/Products/ProductDetails/@product.Id" class="btn btn-info btn-sm">Details</a>
                            @if (product.Quantity > 0)
                            {
                                <form method="post" asp-page-handler="AddToCart" class="d-flex gap-2">
                                    <input type="hidden" name="productId" value="@product.Id" />
                                    <input type="number" name="quantity" value="1" 
                                           min="1" max="@product.Quantity" 
                                           class="form-control" style="width: 80px" />
                                    <button type="submit" class="btn btn-primary btn-sm">Add to Cart</button>
                                </form>
                            }
                            else
                            {
                                <span class="text-danger">Out of Stock</span>
                            }
                            @if (ViewData["IsAdmin"] != null && (bool)ViewData["IsAdmin"])
                            {
                                <a href="/Products/EditProduct/@product.Id" class="btn btn-warning btn-sm">Edit</a>
                                <form method="post" asp-page-handler="Delete" style="display: inline;">
                                    <input type="hidden" name="productId" value="@product.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm" 
                                            onclick="return confirm('Are you sure you want to delete this product?')">
                                        Delete
                                    </button>
                                </form>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Edit Product Modal -->
    <div id="editProductModal" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Product</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="$('#editProductModal').modal('hide');">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="editProductForm" method="post" asp-page-handler="Edit">
                        <input type="hidden" id="editProductId" name="id" />
                        <div class="form-group">
                            <label for="editProductName">Name</label>
                            <input type="text" class="form-control" id="editProductName" name="name" required />
                        </div>
                        <div class="form-group">
                            <label for="editProductDescription">Description</label>
                            <input type="text" class="form-control" id="editProductDescription" name="description" required />
                        </div>
                        <div class="form-group">
                            <label for="editProductPrice">Price</label>
                            <input type="number" class="form-control" id="editProductPrice" name="price" required />
                        </div>
                        <div class="form-group">
                            <label for="editProductCategoryId">Category</label>
                            <select class="form-control" id="editProductCategoryId" name="categoryId" required>
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category.Id">@category.Name</option>
                                }
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function searchProducts() {
            var input = document.getElementById("searchInput");
            var filter = input.value.toLowerCase();
            var tbody = document.getElementById("productTableBody");
            var rows = tbody.getElementsByTagName("tr");

            for (var i = 0; i < rows.length; i++) {
                var nameCell = rows[i].getElementsByTagName("td")[2];
                var descriptionCell = rows[i].getElementsByTagName("td")[3];
                var categoryCell = rows[i].getElementsByTagName("td")[6];
                
                if (nameCell && descriptionCell && categoryCell) {
                    var name = nameCell.textContent || nameCell.innerText;
                    var description = descriptionCell.textContent || descriptionCell.innerText;
                    var category = categoryCell.textContent || categoryCell.innerText;
                    
                    if (name.toLowerCase().indexOf(filter) > -1 || 
                        description.toLowerCase().indexOf(filter) > -1 ||
                        category.toLowerCase().indexOf(filter) > -1) {
                        rows[i].style.display = "";
                    } else {
                        rows[i].style.display = "none";
                    }
                }
            }
        }

        function openEditModal(id, name, description, price, categoryId) {
            $('#editProductId').val(id);
            $('#editProductName').val(name);
            $('#editProductDescription').val(description);
            $('#editProductPrice').val(price);
            $('#editProductCategoryId').val(categoryId);
            $('#editProductModal').modal('show');
        }
    </script>
} 