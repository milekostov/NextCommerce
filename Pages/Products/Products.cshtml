@page
@model NextCommerce.Pages.Products.ProductsModel

<h2>Products</h2>
<p>This is the Products page.</p>

<input type="text" id="searchInput" placeholder="Search products..." onkeyup="searchProducts()" />

<!-- Add Product Form -->
<h3>Add New Product</h3>
<form method="post" asp-page-handler="AddProduct">
    <div class="form-group">
        <label>Name</label>
        <input type="text" asp-for="NewProduct.Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Description</label>
        <input type="text" asp-for="NewProduct.Description" class="form-control" />
    </div>
    <div class="form-group">
        <label>Price</label>
        <input type="number" asp-for="NewProduct.Price" class="form-control" step="0.01" required />
    </div>
    <div class="form-group">
        <label>Category</label>
        <select asp-for="NewProduct.CategoryId" class="form-control" required>
            <option value="">Select a category</option>
            @foreach (var category in Model.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Add Product</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Date Created</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody id="productTableBody">
        @foreach (var product in Model.ProductList)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price.ToString("C")</td>
                <td>@product.DateCreated.ToString("g")</td>
                <td>@product.CategoryId</td>
                <td>
                    <form method="post" asp-page-handler="Delete">
                        <input type="hidden" name="id" value="@product.Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
function searchProducts() {
    var input = document.getElementById('searchInput');
    var filter = input.value.toLowerCase();
    var table = document.getElementById('productTableBody');
    var tr = table.getElementsByTagName('tr');

    for (var i = 0; i < tr.length; i++) {
        var td = tr[i].getElementsByTagName('td');
        var found = false;
        for (var j = 0; j < td.length; j++) {
            if (td[j]) {
                if (td[j].innerHTML.toLowerCase().indexOf(filter) > -1) {
                    found = true;
                }
            }
        }
        tr[i].style.display = found ? '' : 'none';
    }
}
</script> 