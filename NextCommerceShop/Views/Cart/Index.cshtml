@model List<NextCommerceShop.Models.CartItem>

@{
    ViewData["Title"] = "Your cart";
    decimal total = 0;
}

<h1>Your cart</h1>

@if (Model == null || Model.Count == 0)
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th class="text-end">Price</th>
                <th class="text-end">Quantity</th>
                <th class="text-end">Line total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var lineTotal = item.Price * item.Quantity;
                total += lineTotal;

                <tr>
                    <td>@item.Name</td>
                    <td class="text-end">@item.Price.ToString("0.00") €</td>
                    <td class="text-end">
                        <div class="d-inline-flex align-items-center">
                            <form asp-controller="Cart" asp-action="Decrease" method="post" class="me-1">
                                <input type="hidden" name="productId" value="@item.ProductId" />
                                <button type="submit" class="btn btn-sm btn-outline-secondary">-</button>
                            </form>

                            <span>@item.Quantity</span>

                            <form asp-controller="Cart" asp-action="Increase" method="post" class="ms-1">
                                <input type="hidden" name="productId" value="@item.ProductId" />
                                <button type="submit" class="btn btn-sm btn-outline-secondary">+</button>
                            </form>
                        </div>
                    </td>
                    <td class="text-end">@lineTotal.ToString("0.00") €</td>
                </tr>
            }
        </tbody>
    </table>

    <h4 class="text-end">Total: @total.ToString("0.00") €</h4>
}
<a asp-controller="Checkout" asp-action="Index" class="btn btn-primary mt-3">
    Proceed to Checkout
</a>
