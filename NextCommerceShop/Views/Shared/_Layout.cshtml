@inject IHttpContextAccessor HttpContextAccessor
@using NextCommerceShop.Helpers
@using NextCommerceShop.Models

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NextCommerceShop</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NextCommerceShop.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Brand -->
                <a class="navbar-brand"
                   asp-area=""
                   asp-controller="Shop"
                   asp-action="Index">
                    NextCommerceShop
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <!-- LEFT SIDE NAV -->
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Shop link -->
                        <li class="nav-item">
                            <a class="nav-link text-dark"
                               asp-area=""
                               asp-controller="Shop"
                               asp-action="Index">
                                Shop
                            </a>
                        </li>

                        <!-- Cart with badge -->
                        <li class="nav-item position-relative">
                            <a class="nav-link text-dark position-relative"
                               asp-area=""
                               asp-controller="Cart"
                               asp-action="Index">

                                @{
                                    var cart = HttpContextAccessor.HttpContext!.Session
                                    .GetObject<List<CartItem>>("Cart")
                                    ?? new List<CartItem>();

                                    int count = cart.Sum(item => item.Quantity);
                                }

                                <i class="bi bi-cart3 fs-5"></i>

                                @if (count > 0)
                                {
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                        @count
                                        <span class="visually-hidden">items in cart</span>
                                    </span>
                                }
                            </a>
                        </li>

                        <!-- Admin links (only for admins) -->
                        @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   asp-area="Admin"
                                   asp-controller="Home"
                                   asp-action="Index">
                                    Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   asp-area=""
                                   asp-controller="Products"
                                   asp-action="Index">
                                    Products
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   asp-area=""
                                   asp-controller="Categories"
                                   asp-action="Index">
                                    Categories
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   asp-area="Admin"
                                   asp-controller="Orders"
                                   asp-action="Index">
                                    Orders
                                </a>
                            </li>
                        }

                    </ul>

                    <!-- RIGHT SIDE: LOGIN / REGISTER / LOGOUT -->
                    <ul class="navbar-nav">

                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <!-- USER DROPDOWN MENU -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center"
                                   href="#"
                                   id="userDropdown"
                                   role="button"
                                   data-bs-toggle="dropdown"
                                   aria-expanded="false">

                                    <i class="bi bi-person-circle fs-5 me-1"></i>
                                    @User.Identity.Name
                                </a>

                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">

                                    <!-- Admin dashboard (ONLY admins see this) -->
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li>
                                            <a class="dropdown-item d-flex align-items-center"
                                               asp-area="Admin"
                                               asp-controller="Home"
                                               asp-action="Index">

                                                <i class="bi bi-speedometer2 me-2"></i>
                                                Dashboard
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider" /></li>
                                    }

                                    <!-- Profile Settings -->
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center"
                                           asp-area=""
                                           asp-controller="Profile"
                                           asp-action="Index">

                                            <i class="bi bi-gear me-2"></i>
                                            Profile Settings
                                        </a>
                                    </li>

                                    <li><hr class="dropdown-divider" /></li>


                                    <!-- My Orders -->
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center"
                                           asp-area=""
                                           asp-controller="MyOrders"
                                           asp-action="Index">

                                            <i class="bi bi-box-seam me-2"></i>
                                            My Orders
                                        </a>
                                    </li>

                                    <li><hr class="dropdown-divider" /></li>

                                    <!-- Logout -->
                                    <li>
                                        <form asp-area="Identity"
                                              asp-page="/Account/Logout"
                                              method="post"
                                              class="dropdown-item m-0 p-0">

                                            <button type="submit"
                                                    class="btn dropdown-item d-flex align-items-center p-0">

                                                <i class="bi bi-box-arrow-right me-2"></i>
                                                Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
                            </li>
                        }

                    </ul>

                </div>
            </div>
        </nav>


    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - NextCommerceShop -
            <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
