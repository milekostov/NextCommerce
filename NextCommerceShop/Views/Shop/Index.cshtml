@model IEnumerable<NextCommerceShop.Models.Product>

@{
    ViewData["Title"] = "Shop";
}

<h1 class="mb-4">Shop</h1>

@* ============================
   CATEGORY FILTER DROPDOWN
   ============================ *@
@{
    var categories = ViewBag.Categories as List<NextCommerceShop.Models.Category>;
    int? selectedCategoryId = ViewBag.SelectedCategoryId as int?;
}

<form asp-controller="Shop" asp-action="Index" method="get" class="mb-3">
    <select name="categoryId" class="form-select" onchange="this.form.submit()">
        <option value="">All categories</option>

        @if (categories != null)
        {
            foreach (var c in categories)
            {
                if (selectedCategoryId == c.Id)
                {
                    <option value="@c.Id" selected>@c.Name</option>
                }
                else
                {
                    <option value="@c.Id">@c.Name</option>
                }
            }
        }
    </select>
</form>

@* ============================
   PRODUCT LIST
   ============================ *@
@if (Model == null || !Model.Any())
{
    <p>No products available.</p>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">

                    <a asp-controller="Shop"
                       asp-action="Details"
                       asp-route-id="@item.Id"
                       class="text-decoration-none text-dark"
                       style="display:block;">

                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl"
                                 class="card-img-top"
                                 style="height: 200px; object-fit: cover;"
                                 alt="@item.Name" />
                        }
                        else
                        {
                            <img src="https://via.placeholder.com/400x200?text=No+Image"
                                 class="card-img-top"
                                 alt="No image available" />
                        }

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@item.Name</h5>

                            <h6 class="card-subtitle mb-2 text-muted">
                                @item.Category?.Name
                            </h6>

                            @if (!string.IsNullOrWhiteSpace(item.Description))
                            {
                                <p class="card-text">@item.Description</p>
                            }

                            <div class="mt-auto">
                                <p class="fw-bold mb-1">@item.Price.ToString("0.00") €</p>
                                <p class="text-muted mb-2">In stock: @item.StockQuantity</p>
                            </div>
                        </div>
                    </a>

                    <div class="card-footer bg-white border-0 pt-0">
                        <form asp-controller="Shop"
                              asp-action="AddToCart"
                              method="post"
                              class="d-grid">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-primary">
                                Add to cart
                            </button>
                        </form>
                    </div>

                </div>
            </div>
        }
    </div>
}
