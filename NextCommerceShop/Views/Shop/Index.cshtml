@model NextCommerceShop.Models.ViewModels.CatalogViewModel
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Shop";

    // Build SelectLists once (clean + no C# in <option>)
    var categoryItems = new SelectList(
        Model.Categories,
        nameof(NextCommerceShop.Models.Category.Id),
        nameof(NextCommerceShop.Models.Category.Name),
        Model.SelectedCategoryId
    );

    var sortItems = new SelectList(
        new[] {
            new { Value = "",           Text = "Newest" },
            new { Value = "price_asc",  Text = "Price: Low → High" },
            new { Value = "price_desc", Text = "Price: High → Low" },
            new { Value = "name_asc",   Text = "Name: A → Z" },
            new { Value = "name_desc",  Text = "Name: Z → A" }
        },
        "Value",
        "Text",
        Model.SortBy ?? ""
    );
}

<h1 class="mb-4">Shop</h1>

<!-- ============================
     CATEGORY FILTER + SEARCH + SORT (PREMIUM BAR)
     ============================ -->
<form asp-controller="Shop" asp-action="Index" method="get"
      class="filter-bar d-flex flex-wrap align-items-center">

    <!-- Category -->
    <div class="filter-item">
        <div class="input-group">
            <span class="input-group-text filter-icon">
                <i class="bi bi-grid-3x3-gap"></i>
            </span>

            <select name="categoryId" class="form-select" asp-items="categoryItems" onchange="this.form.submit()">
                <option value="">All categories</option>
            </select>
        </div>
    </div>

    <!-- Clear -->
    <div class="filter-item">
        <a asp-action="Index" class="filter-chip">
            <i class="bi bi-x-lg"></i> Clear
        </a>
    </div>

    <!-- Search -->
    <div class="filter-item filter-grow">
        <div class="input-group w-100">
            <span class="input-group-text filter-icon">
                <i class="bi bi-search"></i>
            </span>
            <input name="search"
                   value="@Model.Search"
                   class="form-control"
                   placeholder="Search products..." />
        </div>
    </div>

    <!-- Sort -->
    <div class="filter-item">
        <div class="input-group">
            <span class="input-group-text filter-icon">
                <i class="bi bi-sort-down-alt"></i>
            </span>

            <select name="sortBy" class="form-select" asp-items="sortItems" onchange="this.form.submit()"></select>
        </div>
    </div>

    <!-- Button -->
    <div class="filter-item">
        <button type="submit" class="btn-search-modern">
            <i class="bi bi-arrow-right-circle"></i> Search
        </button>
    </div>
</form>

<!-- ============================
     PRODUCT LIST
     ============================ -->
@if (Model.Products == null || !Model.Products.Any())
{
    <p>No products available.</p>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model.Products)
        {
            <div class="col">
                <div class="card h-100 shadow-sm position-relative">

                    <!-- Badges -->
                    @if (item.StockQuantity == 0)
                    {
                        <span class="product-badge badge-out">OUT OF STOCK</span>
                    }
                    else if (item.StockQuantity <= 5)
                    {
                        <span class="product-badge badge-low">LOW STOCK</span>
                    }

                    <a asp-controller="Shop"
                       asp-action="Details"
                       asp-route-id="@item.Id"
                       class="text-decoration-none text-dark"
                       style="display:block;">

                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <div class="product-image-wrapper">
                                <img src="@item.ImageUrl"
                                     class="product-image card-img-top"
                                     alt="@item.Name" />
                            </div>
                        }
                        else
                        {
                            <div class="product-image-wrapper">
                                <img src="https://via.placeholder.com/400x600?text=No+Image"
                                     class="product-image card-img-top"
                                     alt="No image available" />
                            </div>
                        }

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@item.Name</h5>

                            <h6 class="card-subtitle mb-2 text-muted">
                                @item.Category?.Name
                            </h6>

                            @if (!string.IsNullOrWhiteSpace(item.Description))
                            {
                                <p class="card-text">@item.Description</p>
                            }

                            <div class="mt-auto">
                                <p class="fw-bold mb-1">@item.Price.ToString("0.00") €</p>
                                <p class="text-muted mb-2">In stock: @item.StockQuantity</p>
                            </div>
                        </div>
                    </a>

                    <div class="card-footer bg-white border-0 pt-0">
                        <form asp-controller="Shop"
                              asp-action="AddToCart"
                              method="post"
                              class="d-grid">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-primary" @(item.StockQuantity == 0 ? "disabled" : "")>
                                Add to cart
                            </button>
                        </form>
                    </div>

                </div>
            </div>
        }
    </div>
}

<!-- ============================
     PAGINATION
     ============================ -->
@if (Model.TotalPages > 1)
{
    <nav class="mt-4">
        <ul class="pagination justify-content-center">

            <li class="page-item @(Model.Page == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(Model.Page - 1)"
                   asp-route-categoryId="@Model.SelectedCategoryId"
                   asp-route-search="@Model.Search"
                   asp-route-sortBy="@Model.SortBy">Prev</a>
            </li>

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.Page ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@i"
                       asp-route-categoryId="@Model.SelectedCategoryId"
                       asp-route-search="@Model.Search"
                       asp-route-sortBy="@Model.SortBy">@i</a>
                </li>
            }

            <li class="page-item @(Model.Page == Model.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(Model.Page + 1)"
                   asp-route-categoryId="@Model.SelectedCategoryId"
                   asp-route-search="@Model.Search"
                   asp-route-sortBy="@Model.SortBy">Next</a>
            </li>

        </ul>
    </nav>
}
